{
  "name": "MDXP",
  "description": "Web Slides Made Easy",
  "repository": "https://github.com/0phoff/MDXP",
  "author": "0phoff <0phoff@users.noreply.github.com>",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "packages/*",
    "examples/*"
  ],
  "nohoist": [
    "examples/*"
  ],
  "scripts": {
    "start": "lerna run --parallel start",
    "build": "lerna run build",
    "clean": "lerna run clean",
    "lint": "eslint . --cache --ext js,jsx -f friendly",
    "lint:fix": "eslint . --cache --ext js,jsx -f friendly --fix",
    "docz:dev": "docz dev",
    "docz:build": "docz build",
    "docz:serve": "docz serve",
    "docz:clean": "docz clean && rm -rf .docz && rm -rf docs"
  },
  "devDependencies": {
    "@babel/core": "^7.9.0",
    "docz": "^2.3.1",
    "eslint": "^6.8.0",
    "eslint-config-xo": "^0.29.1",
    "eslint-formatter-friendly": "^7.0.0",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-mdx": "^1.6.9",
    "eslint-plugin-react": "^7.19.0",
    "husky": "^4.2.5",
    "lerna": "^3.20.2",
    "lint-staged": "^10.1.7",
    "react": "^16.13.1",
    "react-dom": "^16.13.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx}": "yarn lint:fix"
  }
}
